{
  "name": "DRIG",
  "version": "1.1.0",
  "description": "De Rest Is Geschiedenis website",
  "scripts": {
    "lite": "lite-server --port 10001",
    "start": "npm run lite",
    "build:html": "xslt3 -xsl:style-source.xsl -s:podcast-source.xml -o:index.html -t",
    "build:scss": "dart-sass --style=compressed style.scss style.css && dart-sass --style=compressed transcription.scss transcription.css",
    "build:scss-help": "dart-sass --help",
    "build:xml": "./node_modules/minify-xml/cli.js podcast-source.xml --output podcast.xml",
    "build:xsl": "./node_modules/minify-xml/cli.js style-source.xsl --output style.xsl",
    "build": "npm run build:scss && npm run build:xml && npm run build:xsl && npm run build:html"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "lite-server": "^2.6.1",
    "minify-xml": "^2.5.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0",
    "xslt3": "^2.1.0"
  },
  "dependencies": {
    "dart-sass": "^1.25.0"
  }
}
